        <Button
            android:id="@+id/continueBtnInMatchSummary"
            android:layout_width="247dp"
            android:layout_height="38dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/greenbtn"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="continueClickedInMatchSummary"
            android:text="Continue"
            android:textColor="@color/col1"
            android:textSize="40px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loserInMatchSummary" />

        <Button
            android:id="@+id/shareBtnInMatchSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="shareClickedInMatchSummary"
            android:text="Share"
            android:textSize="40px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/continueBtnInMatchSummary"
